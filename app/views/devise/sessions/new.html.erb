<%# CSS・・・assets/stylesheets/user/login.css %>

<header class = "site-header">
  <div class = "site-title">
    <%= link_to "POOP MANAGEMENT", root_path, class: "title" %>
   <div class = "icon">
    <%= image_tag '肉球のアイコン3.png', class: "title-icon" %>
   </div>
  </div>

  <li class = "login_translation">
   <% if I18n.locale.to_s == "en" %>
   <%= link_to '日本語', "/ja/users/sign_in" %>
   <% else %>
    <%= link_to 'English', "/en/users/sign_in" %>
   <% end %>
  </li>
</header>

<%= form_with model: @user, url: user_session_path, class: 'login-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      <%= t '.会員情報入力' %>
    </h1>
  </div>
  
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text"><%= t '.メールアドレス' %></label>
      <span class="indispensable"><%= t '.必須' %></span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder: "PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text"><%= t '.パスワード' %></label>
      <span class="indispensable"><%= t '.必須' %></span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-orange-btn" %>
  </div>
</div>
<% end %>
