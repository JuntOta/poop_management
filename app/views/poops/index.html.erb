<%= render "shared/header" %>

<p>poop management</p>

<%# うんち記録 %>
<p id="notice"><%= notice %></p>

<div class="toppage">
<h1 class="top">カレンダー</h1>
<br>

<div class="row">
<div class="col-md-4">
	<div class="schedule">今後の予定一覧</div>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>タイトル</th>
      <th>日程</th>
    </tr>
  </thead>

  <tbody>
    <% @poops.each do |poop| %>
      <tr>
        <td><%= link_to poop.text , poop %></td>
        <td><%= poop.date.strftime("%m-%d") %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= form_with(model: @poop, local: true) do |form| %>

  <div class="title">
    <div class="form-tag">タイトル</div>
    <%= form.text_field :text %>
  </div>


  <div class="content">
    <div class="form-tag">内容</div>
    <%= form.text_field :text %>
  </div>

    <div class="time">
    <div class="form-tag">時間</div>
    <%= form.datetime_select :date %>
  </div>

 <div class="submit">
    <%= form.submit %>
 </div>
<% end %>
</div>

<br>


<br>
<div class="col-md-8">
<%= month_calendar events: @poops do |date, poops| %>
  <%= date.day %>

  <% poops.each do |poop| %>
    <div>
      <%= link_to poop.text, poop %>
    </div>
  <% end %>
<% end %>
</div>
</div>
</div>
<%# うんち記録 %>

<%# 相談投稿一覧 %>
<% @posts.each do |post| %>
  <%= link_to post_path(post.id) do %>
  <div class = "post">
    <div class = "post-date">
      投稿日時：<%= post.created_at.strftime("%Y年 %m月 %d日 %H:%M") %>
    </div>
    <div class = "post-title">
      <%= post.title %>
    </div>
  </div>
  <% end %>
<% end %>
<%# 相談投稿一覧 %>